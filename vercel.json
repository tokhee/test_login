{
  "buildCommand": "bundle install && bundle exec rails assets:precompile",
  "outputDirectory": "public",
  "framework": "ruby",
  "installCommand": "bundle install",
  "builds": [
    {
      "src": "api/index.rb",
      "use": "@vercel/ruby"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.rb"
    }
  ],
  "env": {
    "BUNDLE_DEPLOYMENT": "1",
    "BUNDLE_WITHOUT": "development:test"
  }
} 