{
  "version": 2,
  "builds": [
    {
      "src": "config.ru",
      "use": "@vercel/ruby",
      "config": {
        "bundle": true,
        "includeFiles": [
          "config/**/*",
          "app/**/*",
          "db/**/*",
          "public/**/*",
          "Gemfile",
          "Gemfile.lock",
          "config.ru",
          "Rakefile"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "config.ru"
    }
  ],
  "env": {
    "RAILS_ENV": "production",
    "RACK_ENV": "production",
    "BUNDLE_DEPLOYMENT": "1",
    "BUNDLE_WITHOUT": "development:test",
    "PORT": "3000"
  }
} 