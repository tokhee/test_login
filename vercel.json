{
  "version": 2,
  "builds": [
    {
      "src": "api/index.rb",
      "use": "@vercel/ruby"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.rb"
    }
  ],
  "env": {
    "RAILS_ENV": "production",
    "RACK_ENV": "production",
    "BUNDLE_DEPLOYMENT": "1",
    "BUNDLE_WITHOUT": "development:test"
  }
} 